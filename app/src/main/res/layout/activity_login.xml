<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/melt_icon" />

    <EditText
        android:id="@+id/loginActivity_edittext_id"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="이메일" />

    <EditText
        android:id="@+id/loginActivity_edittext_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="패드워드" />

    <Button
        android:text="로그인"
        android:textColor="#fff"
        android:id="@+id/loginActivity_button_login"
        android:layout_width="250dp"
        android:layout_marginTop="20dp"
        android:background="#DDB6D4"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="5dp"
        android:text="회원가입"
        android:textColor="#fff"
        android:id="@+id/loginActivity_button_signup"
        android:layout_width="250dp"
        android:background="#DDB6D4"
        android:layout_height="wrap_content" />
</LinearLayout>